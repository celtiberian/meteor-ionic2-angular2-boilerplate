{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "meteor/*": ["../../*"]
    },
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "stripInternal": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "meteor/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "meteor/node_modules",
    "meteor"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
